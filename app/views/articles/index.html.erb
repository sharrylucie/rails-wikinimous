<h1>Articles wikinimous</h1>

<% @articles.each do |article| %>
  <ul>
    <li>
      <%= link_to "#{article.title}", article_path(article) %>
      <%= link_to "Delete", article_path(article),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    </li>
  </ul>
<% end %>
<%= link_to "Create a new article", new_article_path %></li>
